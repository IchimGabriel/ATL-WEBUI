@model ATL_WebUI.Models.SQL.Detail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shipment_Id" class="control-label"></label>
                <input asp-for="Shipment_Id" value="@ViewBag.Shipment_Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Container_Id" class="control-label"></label>
                <select asp-for="Container_Id" asp-items="@(new SelectList(ViewBag.Containers, "Unit_Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Container_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

