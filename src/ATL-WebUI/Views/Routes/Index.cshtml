@model IEnumerable<ATL_WebUI.Models.SQL.Route>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RouteNodes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_KM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_CO2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RouteNodes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_KM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_CO2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Route_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Route_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Route_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
