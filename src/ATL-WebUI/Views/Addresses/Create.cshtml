@model ATL_WebUI.Models.SQL.Address

@{
    ViewData["Title"] = "Create Address";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4> Add Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User_Id" class="control-label"></label>
                <select asp-for="User_Id" asp-items="@(new SelectList(ViewBag.Users, "Id", "UserName"))" class="form-control"></select>
                <span asp-validation-for="User_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Field_1" class="control-label"></label>
                <input asp-for="Field_1" class="form-control" />
                <span asp-validation-for="Field_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Field_2" class="control-label"></label>
                <input asp-for="Field_2" class="form-control" />
                <span asp-validation-for="Field_2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
